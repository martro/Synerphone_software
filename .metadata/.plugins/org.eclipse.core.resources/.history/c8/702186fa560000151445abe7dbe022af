#include "adc.h"

void init_adc()
{

	ADMUX |= (1<<REFS0);//VCC as reference, ADC0


	ADCSRA |= (1<<ADEN);//adc enable


	//ADCSRA |= (1<<ADIE);//interrupt enable


	ADCSRA |= (1<<ADPS0) // Prescaler = 32, freq=250kHz
			|(1<<ADPS2)
			|(1<<ADATE)	// Free Running mode
			|(1<<ADEN);	// turn on ADC
}

