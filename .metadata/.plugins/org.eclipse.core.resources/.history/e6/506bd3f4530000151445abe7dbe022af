#include <avr/io.h>
#include <avr/interrupt.h>
#include <util/delay.h>
#include "HD44780.h"
#include "globals.h"
#include "string.h"
#include "LED.h"
#include "lcd.h"
#include "adc.h"
#include <math.h>

void main(void)
{
	MCUCSR |=(1<<JTD);
	MCUCSR |=(1<<JTD);

	LCD_Initalize();

	init_adc();

	_delay_ms(500);
	sei();

	char tekst[]="aaaaa";


	int a=ADCW;

	itoa(a,&tekst,10);


	while(1)
	{

		ADCSRA |= (1<<ADSC);//start conversion

		while(ADCSRA & (1<<ADSC));

		a=ADCW;

		itoa(a,&tekst,10);
		lcd_display(tekst,"dupa");

		_delay_ms(1000);
	}

}

